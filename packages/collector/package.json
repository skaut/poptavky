{
  "name": "poptavky",
  "version": "0.1.0",
  "private": true,
  "description": "A GitHub app to automatically export issues to a webpage.",
  "keywords": [
    "plugin",
    "github app",
    "automation"
  ],
  "homepage": "https://github.com/skaut/poptavky#readme",
  "bugs": {
    "url": "https://github.com/skaut/poptavky/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skaut/poptavky.git"
  },
  "author": "Marek Dědič",
  "type": "module",
  "scripts": {
    "collect": "node --experimental-strip-types src/index.ts",
    "lint": "run-p -c --aggregate-output lint:*",
    "lint:eslint": "eslint --color",
    "lint:typecheck": "tsc --noEmit",
    "test": "vitest",
    "test-coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@octokit/core": "^7.0.3",
    "@octokit/plugin-rest-endpoint-methods": "^16.0.0",
    "ts-custom-error": "^3.3.1"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
    "@eslint/js": "^9.34.0",
    "@eslint/json": "^0.13.1",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-package-json": "^0.54.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.4",
    "nock": "^14.0.10",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.3"
  }
