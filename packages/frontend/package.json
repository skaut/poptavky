{
  "name": "poptavky-fe",
  "version": "0.1.0",
  "private": true,
  "description": "A frontend to display GitHub issues in a webpage",
  "keywords": [
    "react",
    "issues"
  ],
  "homepage": "https://itpoptavky.skaut.cz",
  "bugs": {
    "url": "https://github.com/skaut/poptavky/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skaut/poptavky.git"
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "vite build",
    "lint:ts:eslint": "eslint --color \"src/**/*\" \"__mocks__/**/*\" \"__tests__/**/*\" \"*.config.{js,ts}\"",
    "lint:ts:typecheck": "tsc --noEmit",
    "lint:ts": "run-p -c --aggregate-output lint:ts:*",
    "lint": "run-p -c --aggregate-output lint:*",
    "start": "vite",
    "test": "jest",
    "test-accept": "jest --updateSnapshot"
  },
  "dependencies": {
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.26.1",
    "remark-gfm": "^4.0.0",
    "string-to-color": "^2.2.2",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@emotion/jest": "^11.13.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.0",
    "@eslint/js": "^9.10.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react-dom": "^18.3.0",
    "@types/react-test-renderer": "^18.3.0",
    "@vitejs/plugin-legacy": "^5.4.2",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-compat": "^6.0.0",
    "eslint-plugin-jest": "^28.8.2",
    "eslint-plugin-perfectionist": "^3.3.0",
    "eslint-plugin-prefer-arrow-functions": "^3.4.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
