{
  "name": "poptavky-fe",
  "version": "0.1.0",
  "private": true,
  "description": "A frontend to display GitHub issues in a webpage",
  "keywords": [
    "react",
    "issues"
  ],
  "homepage": "https://itpoptavky.skaut.cz",
  "bugs": {
    "url": "https://github.com/skaut/poptavky/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skaut/poptavky.git"
  },
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "vite build",
    "lint:ts:eslint": "eslint --color \"src/**/*\" \"__mocks__/**/*\" \"tests/**/*\" \"*.config.{js,ts}\"",
    "lint:ts:typecheck": "tsc --noEmit",
    "lint:ts": "run-p -c --aggregate-output lint:ts:*",
    "lint": "run-p -c --aggregate-output lint:*",
    "start": "vite",
    "test": "vitest",
    "test-coverage": "vitest run --coverage",
    "test-accept": "vitest run --update"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.0.1",
    "react-router": "^7.2.0",
    "remark-gfm": "^4.0.1",
    "string-to-color": "^2.2.2",
    "swr": "^2.3.2"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.19.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react-dom": "^19.0.4",
    "@types/react-test-renderer": "^19.0.0",
    "@vitejs/plugin-legacy": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.7",
    "@vitest/eslint-plugin": "^1.1.31",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-prefer-arrow-functions": "^3.6.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.1.1",
    "vitest": "^3.0.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
