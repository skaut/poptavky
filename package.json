{
  "name": "poptavky",
  "version": "0.1.0",
  "description": "A GitHub app to automatically export issues to a webpage.",
  "keywords": [
    "plugin",
    "github app",
    "automation"
  ],
  "homepage": "https://github.com/skaut/poptavky#readme",
  "bugs": {
    "url": "https://github.com/skaut/poptavky/issues"
  },
  "author": "Marek Dědič",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skaut/poptavky.git"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@octokit/core": "^3.5.1",
    "@octokit/plugin-rest-endpoint-methods": "^5.13.0",
    "ts-custom-error": "^3.2.0",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "nock": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "lint:typecheck:collector": "tsc -p packages/collector --noEmit",
    "lint:typecheck": "run-p -c --aggregate-output lint:typecheck:*",
    "lint:eslint": "eslint --color 'jest.config.ts' 'packages/*/src/**/*' 'packages/*/__tests__/**/*'",
    "lint": "run-p -c --aggregate-output lint:*",
    "test": "jest",
    "collect": "ts-node -T packages/collector/src/index.ts",
    "build-frontend": "mkdir -p packages/frontend/dist && echo 'TODO' > packages/frontend/dist/index.html"
  }
}
